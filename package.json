{
  "name": "@zyyv/utils",
  "type": "module",
  "version": "0.0.18",
  "description": "Collection of common and useful JavaScript / TypeScript utilities",
  "author": "zyyv <https://github.com/zyyv>",
  "license": "MIT",
  "homepage": "https://github.com/zyyv/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zyyv/utils.git"
  },
  "bugs": {
    "url": "https://github.com/zyyv/utils/issues"
  },
  "keywords": [
    "utils"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nr stub",
    "stub": "unbuild --stub",
    "build": "rimraf dist && unbuild",
    "lint": "eslint .",
    "test": "vitest",
    "test:update": "vitest -u",
    "release": "bumpp package.json --commit --push --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.7.0",
    "@antfu/ni": "^0.21.12",
    "@types/node": "^20.11.24",
    "bumpp": "^9.3.1",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  }
}
